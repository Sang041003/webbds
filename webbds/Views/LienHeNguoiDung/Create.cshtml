@model webbds.Models.LienHeNguoiDung

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container d-flex align-items-center justify-content-center vh-100">
        <div class="card p-4" style="width: 400px;">
            <h3 class="text-center">Đặt lịch liên hệ</h3>
            @using (Html.BeginForm("Create", "LienHeNguoiDung", FormMethod.Post, new { @class = "form" })) // Đảm bảo form gửi dữ liệu đến action Create của controller DatLich
            {
                @Html.AntiForgeryToken()

                <div class="d-flex flex-column mb-3">
                    <label for="phoneNumber" class="form-label">Số điện thoại</label>
                    <div class="forms_field">
                        @Html.TextBoxFor(model => model.SDT, new { @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="d-flex flex-column mb-3">
                    <label for="contactDate" class="form-label">Ngày liên hệ</label>
                    <div class="forms_field">
                        @Html.TextBoxFor(model => model.NgayLienHe, new { @class = "form-control", type = "date", required = "required" })
                    </div>
                </div>

                <div class="d-flex flex-column mb-3">
                    <label for="note" class="form-label">Ghi chú</label>
                    <div class="forms_field">
                        @Html.TextBoxFor(model => model.GhiChu, new { @class = "form-control", rows = "3", required = "required" })
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Đặt lịch</button>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS and optional Popper.js and jQuery (for certain features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>


