@model webbds.Models.NhanXetViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/NguoiDung_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Giải đáp thắc mắc</h2>
    <hr />

    @foreach (var comment in Model.Comments)
    {
        <div class="card mb-3">
            <div class="card-body">
                <p class="card-text">@comment.BinhLuan</p>
            </div>
        </div>
    }
</div>

<div class="container mt-5">
    <h2>Nhập câu hỏi của bạn</h2>
    <hr />

    <!-- Form để nhập dữ liệu bình luận mới -->
    @using (Html.BeginForm("Create", "NhanXet", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            @Html.EditorFor(model => model.NewComment.BinhLuan, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập bình luận..." } })
            @Html.ValidationMessageFor(model => model.NewComment.BinhLuan, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Gửi</button>
        </div>
    }
</div>












